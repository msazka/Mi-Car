<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="2dp"
    app:contentPadding="10dp"
    app:cardElevation="10dp"
    >



    <RelativeLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/list_track_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_track_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="LEE-1234"
                android:textSize="14sp"
                android:layout_weight="0.75"
                />

            <TextView
                android:id="@+id/list_track_details_date"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="3/29/2017"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="0.25"
                />

        </LinearLayout>

        <View
            android:id="@+id/list_track_details_line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/list_track_details_layout"
            android:background="#000"
            />

        <TextView
            android:id="@+id/list_track_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Being Tracked for around 2 hours"
            android:textSize="14sp"
            android:layout_below="@id/list_track_details_line1"

            />

        <TextView
            android:id="@+id/list_track_details_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Gulberg III, Lahore"
            android:textStyle="bold"
            android:layout_below="@id/list_track_details_time"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>